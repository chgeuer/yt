<Window x:Class="DownloadGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <GroupBox Header="Download URL" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch"  >
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" >
                <TextBox x:Name="downloadUrl" TextWrapping="NoWrap" Text="" Width="350" VerticalAlignment="Center" />
                <Button Content="Download"  Click="Button_Click" VerticalAlignment="Center" />
                <CheckBox x:Name="createAudioCheckbox" Content="Create MP3" VerticalAlignment="Center" />
            </StackPanel>
        </GroupBox>
        <ProgressBar x:Name="progressBar" Height="25" />
    </StackPanel>
</Window>
